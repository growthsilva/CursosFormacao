algoritmo "aniverario"

var
   ano_atual: inteiro
   ano_nasc: inteiro
   nasc: inteiro
   nome: caractere

inicio
      Escreva ("Qual seu nome?")
      Leia(nome)
      Escreva ("Em que ano você nasceu?")
      Leia (ano_nasc)
      Escreva ("Em que nós estamos?")
      Leia (ano_atual)
      nasc <- ano_atual - ano_nasc
      Escreva ("Sua idade é ", nasc)
      
fimalgoritmo
